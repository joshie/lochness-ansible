from ansible import utils
import os
import urllib2
try:
    import json
except ImportError:
    import simplejson as json


ANSIBLE_ETCD_URL = 'http://127.0.0.1:4001'
if os.getenv('ANSIBLE_ETCD_URL') is not None:
    ANSIBLE_ETCD_URL = os.environ['ANSIBLE_ETCD_URL']

def main():
    arg_spec = dict(
        service=dict(required=True),
        prefix=dict(required=False)
    )

    module = AnsibleModule(argument_spec=arg_spec, supports_check_mode=False)

    baseurl = '%s/v2/keys/' % ANSIBLE_ETCD_URL
    service = module.params['service'].strip('/')
    prefix = module.params.get('prefix', '/queensland').strip('/')

    url = "%s/%s/services/%s?recursive=true" % (baseurl, prefix, service)

    nodes=dict()

    r = urllib2.urlopen(url)
    data = r.read()
    x = json.loads(data)

    dot = re.compile('\.')

    for node in x['node'].get('nodes', []):
        val = json.loads(node['value'])
        name = val['target']
        if not name:
            continue
        if dot.search(name):
            continue
        url = "%s/%s/nodes/%s" % (baseurl, prefix, name)
        r = urllib2.urlopen(url)
        data = r.read()
        y = json.loads(data)
        val = json.loads(y['node']['value'])
        if val['ip']:
            nodes[name] = val

    module.exit_json(changed=False, nodes=nodes)

# import module snippets
from ansible.module_utils.basic import *

main()
