[Unit]
Description=etcd
Wants=network.target
After=network.target

[Service]
ExecStart=/usr/sbin/etcd -data-dir {{ etcd_data_dir }} --listen-client-urls 'http://localhost:2379,http://localhost:4001,http://{{ ansible_default_ipv4.address }}:4001'
StandardOutput=journal
StandardError=journal
User={{ etcd_user }}
RestartSec=5s
Restart=always

[Install]
WantedBy=multi-user.target